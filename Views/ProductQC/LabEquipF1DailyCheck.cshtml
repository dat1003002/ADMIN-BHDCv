@model X.PagedList.IPagedList<AspnetCoreMvcFull.ModelDTO.Product.LaboratoryEquipmentF1DTO>
@using X.PagedList.Mvc.Core
@using X.PagedList

@{
    ViewData["Title"] = "Tiêu Chuẩn Kiểm Tra Hằng Ngày (F#3)";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="nav-align-top">
    <ul class="nav nav-pills flex-column flex-md-row mb-6">
        <li class="nav-item me-1">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ListLabEquipmentF1" ? "active" : "")"
               asp-controller="LaboratoryEquipmentF1" asp-action="ListLabEquipmentF1">Thẻ Lý Lịch Thiết Bị (F#1)</a>
        </li>
        <li class="nav-item me-1">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ListLabEquipF1Ketquahieuchuan" ? "active" : "")"
               asp-controller="LaboratoryEquipmentF1" asp-action="ListLabEquipF1Ketquahieuchuan">Kết Quả Hiệu Chuẩn (F#2)</a>
        </li>
        <li class="nav-item me-1">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ListLabEquipF1DailyCheck" ? "active" : "")"
               asp-controller="LaboratoryEquipmentF1" asp-action="ListLabEquipF1DailyCheck">Tiêu Chuẩn Kiểm Tra Hằng Ngày (F#3)</a>
        </li>
    </ul>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-controller="LaboratoryEquipmentF1" asp-action="CreateLaboratoryEquipmentF1" class="btn btn-primary">Thêm Mới</a>
    <form asp-controller="LaboratoryEquipmentF1" asp-action="SearchLaboratoryEquipmentF1" method="post">
        <input type="hidden" name="categoryId" value="25" />
        <div style="display: inline-flex; border: 1px solid #ccc; border-radius: 2px; overflow: hidden;">
            <input type="text" name="name" placeholder="Nhập tên tiêu chuẩn để tìm kiếm" value="@ViewData["SearchTerm"]"
                   style="border: none; padding: 5px 8px; font-size: 14px; width: 250px; height: 30px; outline: none;" required />
            <button type="submit" style="padding: 5px 12px; background-color: #428BCA; color: white; border: none; cursor: pointer; font-size: 14px; height: 30px; outline: none;">
                Tìm kiếm
            </button>
        </div>
    </form>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.name</h5>
                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(item.image))
                            {
                                <img src="@Url.Content("~/images/" + item.image)" style="max-width: 100%; max-height: 200px; object-fit: cover;" alt="Ảnh tiêu chuẩn" />
                            }
                            else
                            {
                                <span>Chưa có ảnh</span>
                            }
                        </div>
                        <div class="d-flex justify-content-around">
                            <a asp-action="EditLaboratoryEquipmentF1" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Sửa</a>
                            <button class="btn btn-sm btn-danger delete-btn" data-id="@item.ProductId">Xóa</button>
                            <button class="btn btn-sm btn-info details-btn" data-id="@item.ProductId">Chi Tiết</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p>Không tìm thấy tiêu chuẩn nào.</p>
        </div>
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("ListLabEquipF1DailyCheck", new { page, name = ViewData["SearchTerm"] }),
new PagedListRenderOptions { UlElementClasses = new[] { "pagination", "justify-content-center" }, LiElementClasses = new[] { "page-item" }, PageClasses = new[] { "page-link" } })

<div class="modal fade" id="modalScrollable" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document" style="max-width: 100%; width: 100%; height: 100%; margin: 0;">
        <div class="modal-content" style="height: 100%; border-radius: 0;">
            <div class="modal-header" style="background: red; justify-content: center;">
                <h5 class="modal-title" style="color: white;">Chi Tiết Tiêu Chuẩn</h5>
            </div>
            <div class="modal-body" id="modalBody" style="text-align: center;"></div>
            <div class="modal-footer" style="background: red;">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-btn').click(function () {
                if (confirm("Bạn có chắc chắn muốn xóa tiêu chuẩn này không?")) {
                    $.ajax({
                        url: '@Url.Action("DeleteLaboratoryEquipmentF1", "LaboratoryEquipmentF1")',
                        type: 'POST',
                        data: { productId: $(this).data('id') },
                        success: function (result) {
                            if (result.success) {
                                alert(result.message);
                                location.reload();
                            } else {
                                alert("Có lỗi xảy ra: " + result.message);
                            }
                        },
                        error: function (xhr) {
                            alert("Có lỗi xảy ra: " + xhr.responseText);
                        }
                    });
                }
            });

            $('.details-btn').click(function () {
                $.ajax({
                    url: '@Url.Action("ShowLaboratoryEquipmentF1", "LaboratoryEquipmentF1")',
                    type: 'GET',
                    data: { id: $(this).data('id') },
                    success: function (data) {
                        $('#modalBody').html(data);
                        $('#modalScrollable').modal('show');
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải dữ liệu tiêu chuẩn.');
                    }
                });
            });
        });
    </script>
}
