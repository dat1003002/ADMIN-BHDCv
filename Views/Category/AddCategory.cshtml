@model AspnetCoreMvcFull.Models.Category

@{
	ViewData["Title"] = "Thêm Danh Mục";
}

<div class="d-flex justify-content-center" style="min-height: 100vh;">
	<div class="col-md-6">
		<div class="card">
			<h5 class="card-header">Thêm Danh Mục</h5>
			<div class="card-body demo-vertical-spacing demo-only-element">
				<form asp-action="AddCategory" method="post">
					<div class="form-group">
						<label class="form-label" asp-for="CategoryName">Tên Danh Mục</label>
						<div class="input-group">
							<input asp-for="CategoryName" class="form-control" />
						</div>
						<span asp-validation-for="CategoryName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label" asp-for="Description">Mô Tả</label>
						<div class="input-group">
							<input asp-for="Description" class="form-control" />
						</div>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label" asp-for="Tenxuong">Tên Xưởng</label>
						<div class="input-group">
							<input asp-for="Tenxuong" class="form-control" />
						</div>
						<span asp-validation-for="Tenxuong" class="text-danger"></span>
					</div>
					<div class="category-add" style="text-align:right; padding:20px 0px;">
						<button type="submit" class="btn-addcategory"><i class='bx bx-plus-medical'></i>Thêm Mới</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
